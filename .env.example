# Scavengers Mobile App Environment Variables
# Copy this to .env and fill in your values

# ===========================================
# API URL - Your Vercel deployment
# ===========================================
EXPO_PUBLIC_API_URL=https://your-app.vercel.app/api

# ===========================================
# SUPABASE (for direct database access)
# ===========================================
# Get these from: Supabase Dashboard → Project Settings → API
#
# Project URL (e.g., https://xxxx.supabase.co)
EXPO_PUBLIC_SUPABASE_URL=

# Anon/Public Key (safe to expose in client)
EXPO_PUBLIC_SUPABASE_ANON_KEY=

# ===========================================
# OPTIONAL
# ===========================================

# Google Gemini AI (for AI-powered features)
EXPO_PUBLIC_GEMINI_API_KEY=

# Environment
EXPO_PUBLIC_ENV=development

# ===========================================
# DEVELOPMENT ONLY
# ===========================================

# Dev bypass - skip login and auto-authenticate as a dev user
# Only works when __DEV__ is true (development builds)
EXPO_PUBLIC_DEV_BYPASS=false
