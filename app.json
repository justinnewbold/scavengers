{
  "expo": {
    "name": "Scavengers",
    "slug": "scavengers",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "scavengers",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0D1117"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.scavengers.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "Scavengers needs camera access to verify photo challenges and capture your adventure moments",
        "NSLocationWhenInUseUsageDescription": "Scavengers uses your location to verify GPS-based challenges and show nearby hunts",
        "NSPhotoLibraryUsageDescription": "Scavengers needs photo library access to save and share your challenge photos",
        "NSMicrophoneUsageDescription": "Scavengers may use the microphone for video challenge submissions"
      },
      "config": {
        "usesNonExemptEncryption": false
      },
      "associatedDomains": [
        "applinks:scavengers.newbold.cloud"
      ]
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0D1117"
      },
      "package": "com.scavengers.app",
      "versionCode": 1,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.VIBRATE",
        "android.permission.INTERNET"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "scavengers.newbold.cloud",
              "pathPrefix": "/hunt/"
            },
            {
              "scheme": "https",
              "host": "scavengers.newbold.cloud",
              "pathPrefix": "/join/"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Scavengers to access your camera for challenge verification"
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Allow Scavengers to access your location for GPS challenges"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Scavengers to access your photos for submissions"
        }
      ],
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "scavengers-app"
      }
    },
    "owner": "scavengers",
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/scavengers-app"
    }
  }
}
