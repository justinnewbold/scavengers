{
  "expo": {
    "name": "Scavengers",
    "slug": "scavengers",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "scavengers",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a2e"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.scavengers.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to verify scavenger hunt challenges",
        "NSLocationWhenInUseUsageDescription": "This app uses your location to verify GPS-based challenges",
        "NSPhotoLibraryUsageDescription": "This app accesses your photos for challenge submissions"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1a1a2e"
      },
      "package": "com.scavengers.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.READ_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Scavengers to access your camera for challenge verification"
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Allow Scavengers to access your location for GPS challenges"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Scavengers to access your photos for submissions"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "scavengers-app"
      }
    }
  }
}
